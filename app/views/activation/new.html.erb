<h1>User's Activation List</h1>
<table>
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Profile picture</th>
		<th>D.O.B</th>
		<th>Activation</th>
		<th>Reject</th>
	</tr>
<% @users.each do |user| %>
	<tr>
		<td><%= user.name %></td>
		<td><%= user.email %></td>
		<td><%= image_tag user.profile_image.url, style: 'height:3vw;width:5vw;'if user.profile_image?%></td>
		<td><%= user.birthdate %></td>
		<td><%= link_to "approve",activation_path(user.id), method: "patch" %></td>
		<td><%= link_to "reject", "#" %></td>
	</tr>
<% end %>
</table>

