<p id="notice"><%= notice %></p>
<h1><%= @user.name %></h1>
<hr>
<table>
	<tr>
		<td><%= image_tag @user.profile_image.url, style: 'height:3vw;width:5vw;'if @user.profile_image?%> </td>
		<td><%= image_tag @user.cover_image.url, style: 'height:3vw;width:5vw;'if @user.cover_image?%></td>
	</tr>
	<tr>
		<%#= record =  Friendship.find_by(sender_id: current_user.id, receiver_id: @user.id)%> 
		<%#= Friendship.find_by(sender_id: @user.id, receiver_id: current_user.id)%> 
		<% unless @user == current_user %>
			<% request = Friendship.find_by(sender_id: current_user.id, receiver_id: @user.id) || Friendship.find_by(sender_id: @user.id, receiver_id: current_user.id) %>
			<% friendship = Friendship.find_by(sender_id: current_user.id, receiver_id: @user.id, status: "accept") || Friendship.find_by(sender_id: @user.id, receiver_id: current_user.id, status: "accept") %>
			<% if !request.present? %>
				<td><%= link_to 'Send Friend Request', friendship_index_path(id: @user.id), method: "post" %></td>
			<% elsif friendship.present? %>
				<td> <%= "#{@user.name} and you are friends" %> </td>
			<% end %>
		<% end %>
	</tr>
</table>


