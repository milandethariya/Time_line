<% content_for :title, 'Users' %>
<p id="notice"><%= notice %></p>
<h1>Users</h1>
<% if @users.present? %>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Name</th>
        <th>Birthdate</th>
        <th>Gender</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.birthdate %></td>
          <td><%= user.gender %></td>
          <td><%= link_to 'Show', user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

