<% content_for :title, 'Micro Post'%>
<div class="m-3 row d-flex justify-content-center">
  <div class="col-md-6">
    <div class="w-100 timeMagin">
      <div class="row">
        <h3 style="text-align: center;">New Micropost</h3>
      </div>
      <div class="row" id="microPostForm">
        <%= render partial:"microposts/micropostform" %>
      </div>
    </div>
    <div class="w-100 timeMagin">
      <div class="row">
        <h3 style="text-align: center;">Microposts</h3>
      </div>
      <hr>
      <div id="userMicroposts" class="row" >
        <%= render partial: "microposts/microposts" %>
      </div>
      <div class="row d-flex justify-content-center">
        <div class="col">
          <%== pagy_bootstrap_nav(@pagy) %>
          <%#== pagy_nav(@pagy) %>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
  $(document).ready(function(){
    $('#micropost_image').change(function(){
      if(this.files[0].size > 1048576){
        alert ("micropost_image is more than 1 MB")
      }
    })
  })
</script>