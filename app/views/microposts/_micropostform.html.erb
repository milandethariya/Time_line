<%= form_for(@micropost,remote: true) do |micropost| %>
  <div class="form-group row mb-2">
    <label class="col-sm-2 col-form-label"><%= micropost.label :content %></label>
    <div class="col-sm-10">
      <%= micropost.text_field :content, :class => "form-control" %>  
    </div>
  </div>

  <div class="form-group row mb-2">
    <div class="col-sm-12 col-form-label">
      <%= micropost.file_field :micropost_image, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <div class="col-sm-12 col-form-label">
      <%= micropost.submit :class => "form-control btn btn-secondary" %>
    </div>
  </div>
<% end %>