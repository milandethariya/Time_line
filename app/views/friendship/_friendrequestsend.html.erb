<% unless user == current_user %>
	<% request = current_user.find_friend_request(user) %>
	<% if !request.present? %>
		<%= link_to 'Send Friend Request', friendship_index_path(id: user.id),remote: true, method: "post",class: "text-decoration-none"%>
	<% elsif request.status == "accept" %>
		<%= "#{user.name} and you are friends" %>
	<% elsif request.status == "pending" %>
		Friend Request is pending
	<% end %>
<% end %>