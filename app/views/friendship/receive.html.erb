<% content_for :title, 'Friend Requests' %>
<h1>Friend Request By</h1>
<% if @receivers.present? %>
	<table>
		<tr>
			<th>Profile</th>
			<th>Name</th>
			<th>Accept</th>
			<th>Reject</th>
		</tr>
		<% @receivers.each do |receiver| %>
		<% user = receiver.sender %>
		<% if user.present? %>
			<tr>
				<td><%= image_tag user.profile_image.url, style: 'height:3vw;width:5vw;'if user.profile_image?%></td>
				<td><%= user.name %></td>
				<td><%= link_to "Accept", friendship_path(receiver.id), method: "patch"%></td>
				<td><%= link_to "Reject", friendship_path(receiver.id), method: "delete"%></td>
			<tr>
		<% end %>
		<% end %>
	</table>
<% end %>
