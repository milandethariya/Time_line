<% content_for :title, 'Log In' %>
<div class="formStyle">
  <h1 class="row justify-content-center">Log in</h1>
  <%= form_for :session, url: sessions_create_path do |form| %>

    <div class="form-group row mb-3">
      <label class="col-sm-2 col-form-label"><%= form.label :email %></label>
      <div class="col-sm-10">
        <%= form.text_field :email, :class => "form-control" %>  
      </div>
    </div>

    <div class="form-group row mb-3">
      <label class="col-sm-2 col-form-label"><%= form.label :password %></label>
      <div class="col-sm-10">
        <%= form.password_field :password, :class => "form-control" %>  
      </div>
    </div>
    
    <div class="form-group row mb-3">
      <div class="col-sm-10 offset-2">
        <div class="form-check">
          <%= form.check_box :remember,:class => "form-check-input" %>
          <label class="form-check-label" for="exampleCheck1"><%= form.label :remember %></label>
        </div>
      </div>
    </div>


    <div class="form-group row mb-3">
      <div class="col-sm-12">
        <%= form.submit "Log in", :class => "form-control btn btn-secondary"%>  
      </div>
    </div>
  <% end %> 
</div>
