<h1>Log in</h1>
<%= form_for :session, url: sessions_create_path do |form| %>
	<div class="field">
		<%= form.label :email %>
		<%= form.email_field :email %>
	</div>

	<div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
  	<%= form.label :remember %>
		<%= form.check_box :remember %>
  </div>

  <%= form.submit "Log in" %><br>
  <%= link_to "Sign up", new_user_path %>

<% end %> 
