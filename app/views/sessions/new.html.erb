<% content_for :title, 'Log In' %>
<div class="formStyle align-items-center p-3 ">
  <div class="row center">
    <div class="col-1 offset-3">
      <a class="navbar-brand d-inline-block" href="#">
        <%= image_tag("logo.jpg", :alt => "logo", size: '50') %>
      </a>
    </div>
    <div class="col-4">
      <h1 class="row justify-content-center">Log in</h1>
    </div>
  </div>
  <div class="row m-2" >
    <%= form_for :session, url: sessions_create_path do |form| %>
      <div class="form-group row mb-2">
        <label class="col-sm-2 col-form-label"><%= form.label :email %></label>
        <div class="col-sm-10">
          <%= form.text_field :email, :class => "form-control" %>  
        </div>
      </div>

      <div class="form-group row mb-2">
        <label class="col-sm-2 col-form-label"><%= form.label :password %></label>
        <div class="col-sm-10">
          <%= form.password_field :password, :class => "form-control" %>  
        </div>
      </div>
      
      <div class="form-group row mb-2">
        <div class="col-sm-10 offset-2">
          <div class="form-check">
            <%= form.check_box :remember,:class => "form-check-input" %>
            <label class="form-check-label" for="exampleCheck1"><%= form.label :remember %></label>
          </div>
        </div>
      </div>

      <div class="form-group row mb-2">
        <div class="col-sm-12">
          <%= form.submit "Log in", :class => "form-control btn btn-secondary"%>  
        </div>
      </div>
    <% end %>
  </div> 
  <div class="text-center"><small>Don't have an account?</small>
    <%= link_to "Sign Up", new_user_path%>
  </div>
</div>
